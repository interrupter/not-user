{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "globalReturn": false
        },
        "ecmaVersion": 2022
    },
    "env": {
        "es6": true,
        "node": true,
        "mongo": true,
        "browser": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:sonarjs/recommended",
        "plugin:promise/recommended"
    ],
    "plugins": ["promise"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-useless-escape": [0]
    }
}
